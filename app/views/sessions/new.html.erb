<h1 class="fresh_heading">Freshevent</h1>
<p><%= link_to "New ? Signup", signup_path %></p>
<div class="margin30bot"> </div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.email_field :email, class: 'form-control log_email', placeholder: "Email" %>
      <%= f.password_field :password, class: 'form-control log_pass',placeholder: "Password" %>
      <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>